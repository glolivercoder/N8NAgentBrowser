{
  "manifest_version": 3,
  "name": "N8N Workflow Assistant",
  "version": "1.0.0",
  "description": "Assistente inteligente para criação e otimização de workflows no N8N usando modelos de linguagem",
  "icons": {
    "16": "assets/icons/icon16.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*/n8n/*", "*://n8n.io/*", "*://localhost:*/*"],
      "js": ["content/n8n-content.js"],
      "css": ["content/n8n-content.css"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://openrouter.ai/*",
    "http://localhost:*/*",
    "*://*/api/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "lib/*", "popup/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_page": "options/options.html",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Abrir o N8N Workflow Assistant"
    },
    "generate_workflow": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Gerar novo workflow"
    }
  }
}
